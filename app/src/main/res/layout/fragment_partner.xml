<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".MainActivity">






<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/headlayout"
        android:orientation="vertical"


        >

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:outlineSpotShadowColor="#035185"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            >


            <TextView
                android:id="@+id/tvJSON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Select Rider"
                android:textColor="#3E3F41"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout

        android:id="@+id/layout1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation = "horizontal"
            android:layout_height="130dp">



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioGroup
                        android:id="@+id/radiogroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true">


                        <RadioButton
                            android:id="@+id/rbsmartcity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:textColor="#0C0A0A"
                            android:textSize="15dp" />


                    </RadioGroup>


                    <ImageView
                        android:id="@+id/btnsmartcity"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/images" />


                    <TextView
                        android:id="@+id/tvsmarcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/btnsmartcity"
                        android:layout_marginLeft="35dp"
                        android:text="SmartCity"
                        android:textAlignment="center"
                        android:visibility="visible"

                        />


                    <Button
                        android:id="@+id/btnsmartcityprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_below="@+id/tvsmarcity"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/bg_blue_border"
                        android:text="View Profile"
                        android:textAllCaps="false"
                        android:textColor="#304FFE"
                        android:textSize="12dp"
                        android:textStyle="italic"


                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioGroup
                        android:id="@+id/rbgroup2"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content" >


                        <RadioButton
                            android:id="@+id/rberranda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#0C0A0A"
                            android:textSize="15dp"
                            android:checked="false" />


                    </RadioGroup>



                    <ImageView
                        android:id="@+id/btnerranda"
                        android:layout_width="70dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="70dp"
                        android:background="@drawable/erranda"
                        />


                    <TextView
                        android:id="@+id/tverranda"
                        android:layout_marginLeft="35dp"
                        android:layout_below="@id/btnerranda"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="ErrandaGH"

                        />


                    <Button
                        android:id="@+id/btnerrandaghprofile"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@+id/tverranda"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textAllCaps="false"
                        android:textColor="#304FFE"
                        android:text="View Profile"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:background="@drawable/bg_blue_border"


                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation = "horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="116dp">



            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="20dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioGroup
                        android:id="@+id/radiogroup3"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content" >


                        <RadioButton
                            android:id="@+id/rbabiquick"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#0C0A0A"
                            android:textSize="15dp"
                            android:checked="false" />


                    </RadioGroup>



                    <ImageView
                        android:id="@+id/btnabiquick"
                        android:layout_width="70dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="70dp"
                        android:background="@drawable/intransit"
                        />


                    <TextView
                        android:id="@+id/tvabiquick"
                        android:layout_marginLeft="35dp"
                        android:layout_below="@id/btnabiquick"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="AbiQuick"

                        />


                    <Button
                        android:id="@+id/btnabiquickprofile"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@+id/tvabiquick"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textAllCaps="false"
                        android:textColor="#304FFE"
                        android:text="View Profile"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:background="@drawable/bg_blue_border"


                        />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                   app:cardCornerRadius="20dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RadioGroup
                        android:id="@+id/rbgroup4"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content" >


                        <RadioButton
                            android:id="@+id/rbsmriders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#0C0A0A"
                            android:textSize="15dp"
                            android:checked="false" />


                    </RadioGroup>



                    <ImageView
                        android:id="@+id/btnsmriders"
                        android:layout_width="70dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="70dp"
                        android:background="@drawable/biker"
                        />


                    <TextView
                        android:id="@+id/tvsmriders"
                        android:layout_marginLeft="35dp"
                        android:layout_below="@id/btnsmriders"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="SMRiders"

                        />


                    <Button
                        android:id="@+id/btnsmridersprofile"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@+id/tvsmriders"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textAllCaps="false"
                        android:textColor="#304FFE"
                        android:text="View Profile"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:background="@drawable/bg_blue_border"


                        />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>




    <Button
        android:layout_marginTop="30dp"

        android:id="@+id/btncontinue"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="@drawable/buttonblueborder"
        android:text="Continue"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="#FAFBFC"
        android:textSize="14sp"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/layoutwebview"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>



</LinearLayout>
</RelativeLayout>






























