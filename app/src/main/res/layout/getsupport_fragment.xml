<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFCFC">


    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#035185"
        android:orientation="horizontal"
        android:paddingTop="0dp">

    <TextView
        android:id="@+id/title_status"
        style="@style/TextViewColumn"
        android:text="Get Support"
        android:layout_width="wrap_content"
        android:textColor="#FAF8F8"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="18dp" />

    </LinearLayout>






    <LinearLayout
        android:id="@+id/topMargin"
        android:layout_width="wrap_content"
        android:layout_below="@+id/heading"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="4"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:src="@drawable/blue_back"
            android:visibility="invisible" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">





        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btntel"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/phone"
                />



            <TextView
                android:id="@+id/tvcall"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Phone"

                />

        </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent">



            <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnmail"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/email3"
                />



            <TextView
                android:id="@+id/tvmessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SMS"
                android:gravity="center"
                android:layout_weight="1"

                />


        </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/btnchat"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:visibility="visible"
                android:layout_weight="1"
                android:background="@drawable/whatsapp"

                />


            <TextView
                android:id="@+id/tvchat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Whatsapp"
                android:textAlignment="center"
                />

        </LinearLayout>
        </LinearLayout>



    </LinearLayout>




    <ScrollView
        android:id="@+id/scrissues"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/radiolayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvselect"
            style="@style/TextViewColumn"
            android:text="Select Problem"
            android:layout_width="wrap_content"
            android:textColor="#035185"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="18dp" />



        <LinearLayout

            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RadioGroup
        android:id="@+id/radioproblem"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content" >


        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm unable to submit request"
            android:textColor="#0C0A0A"
            android:textSize="15dp"
            android:checked="false" />


        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unable to pay with Mobile money "
            android:textColor="#030303"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm unable to check my status"
            android:textColor="#090808"
            android:textSize="15dp"
            android:checked="false" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030000"
            android:text="I'm unable to reach rider"
            android:textSize="15dp"
           />


        <RadioButton
            android:id="@+id/rb5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030000"
            android:text="Package delay in getting to destination"
            android:textSize="15dp"
            />



        <RadioButton
            android:id="@+id/rb6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030000"
            android:text="Package not delivered to me"
            android:textSize="15dp"
            />


        <RadioButton
            android:id="@+id/rb7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030000"
            android:text="Wrong package delivered to me"
            android:textSize="15dp"
            />

        <RadioButton
            android:id="@+id/rb8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#030000"
            android:text="Package is damaged"
            android:textSize="15dp"
            />

    </RadioGroup>
        </LinearLayout>


        <EditText
            android:visibility="visible"
            android:id="@+id/etrequestid"
            android:layout_width="200dp"
            android:hint="Enter serial number"
            android:textAlignment="center"
            android:textColorHint="#035185"
            android:textStyle="italic"
            android:textSize="14dp"
            android:layout_gravity="center"
            style="@style/SetupEditTextStyleBlack"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:id="@+id/headbutton"
            android:layout_width="200dp"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">



            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/buttonblueborder"
                android:text="Send"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="#FAFBFC"
                android:textSize="14sp"
                android:visibility="visible" />


        </LinearLayout>



    </LinearLayout>
    </ScrollView>








    <!--<ProgressBar-->
        <!--android:id="@+id/progressBar"-->
        <!--android:visibility="gone"-->
        <!--android:text="Connecting Support"-->
        <!--style="?android:attr/progressBarStyleHorizontal"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" />-->

</LinearLayout>



