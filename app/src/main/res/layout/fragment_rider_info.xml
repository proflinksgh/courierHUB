<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rider"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    tools:context="com.example.Erranda.Rider_Info_Fragment"
    android:background="#035185"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/tvsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text = "DELIVERY AGENT DETAILS"
            android:layout_marginTop="0dp"
            android:scrollbars="vertical"
            android:visibility="visible"
            android:textColor="#F5F3F2" />


        <ImageView
            android:id="@+id/imgpic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/defaultpic" />

        <TextView
            android:id="@+id/tvReqlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="NAME:"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:scrollbars="vertical"
            android:textColor="#FF6D00" />


        <TextView
            android:id="@+id/tvstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            android:textStyle="italic"
            android:scrollbars="vertical"
            android:textColor="#F5F3F2" />

        <TextView
            android:id="@+id/tvReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="CONTACT"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            android:textColor="#FF6D00" />



        <TextView
            android:id="@+id/tvstat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="0dp"
            android:textStyle="italic"
            android:scrollbars="vertical"
            android:textColor="#F5F3F2" />

        <TextView
            android:id="@+id/tvReq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="CURRENT LOCATION"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"
            android:textColor="#FF6D00" />


        <Button
            android:id="@+id/btnMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:shadowColor="#0F0202"
            android:visibility="visible"
            android:background="@drawable/pplaceholder"
            android:textColor="#fff" />


        <Button
            android:id="@+id/btnExit"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonstyleselector"
            android:text="EXIT"
            android:textColor="#fff" />



    </LinearLayout>
</RelativeLayout>