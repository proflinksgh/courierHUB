<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#035185"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"

        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#035185"
            android:orientation="horizontal"

            android:paddingTop="0dp">

            <TextView
                android:id="@+id/title_status"
                style="@style/TextViewColumn"
                android:text="My Request List"
                android:layout_width="wrap_content"
                android:textColor="#FAF8F8"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18dp" />



            <Button
                android:id="@+id/imreload"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:background="@drawable/reloadd"

                 />


            <Button
                android:id="@+id/imrequest"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/cart"
                />





        </LinearLayout>


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background = "#FCFCFD"
            android:gravity="center_vertical">

            <ScrollView

                android:id="@+id/license_agree_scrollView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#F7F4F4"
                android:fillViewport="true">

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical" >



            </LinearLayout>
            </ScrollView>




            <LinearLayout
                android:id="@+id/statusqty"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="#035185"
                android:weightSum="4"

                >



                <TextView
                    android:id="@+id/tvqueue"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="#FFAB38"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tvshipped"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="#FFAB38"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tvtransit"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="#FFAB38"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvdelivered"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="0"
                    android:textAllCaps="false"
                    android:textColor="#FFAB38"
                    android:textSize="14sp" />


            </LinearLayout>



                <LinearLayout
                    android:id="@+id/statuslayout"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:background="#035185"
                    android:weightSum="4"

                >



                    <Button
                        android:id="@+id/btnqueue"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonstyleslectormystyle"
                        android:textAlignment="center"
                        android:text="In Queue"
                        android:textAllCaps="false"
                        android:textColor="#000002"
                        android:textSize="14sp" />


                    <Button
                        android:id="@+id/btnshipped"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:text="Shipped"
                        android:background="@drawable/buttonstylemystylenobackground"
                        android:textColor="#070707"
                        android:textSize="14dp"
                        />




                    <Button
                        android:id="@+id/btnintransit"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textAlignment="center"
                        android:text="Intransit"
                        android:background="@drawable/buttonstylemystylenobackground"
                        android:textColor="#070707"
                        android:textSize="14dp"
                        />

                    <Button
                        android:id="@+id/btndelivered"
                        android:layout_width="180dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/buttonstylemystylenobackground"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:text="Delivered"
                        android:textColor="#070707"
                        android:textSize="14dp"
                        />


                </LinearLayout>

                </LinearLayout>

            </LinearLayout>








    </LinearLayout>
